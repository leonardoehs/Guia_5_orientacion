<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    tools:context=".Calculadora"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txvOperacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="1+1"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/txvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_gravity="right"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnReset"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="AC"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btnBorrar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="DEL"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btnMas"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="+"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btnMenos"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="-"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnSiete"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="7"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btnOcho"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="8"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btnNueve"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="9"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btnPor"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="*"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnCuatro"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="4"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btnCinco"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="5"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btnSeis"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="6"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btnEntre"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="/"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnUno"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="1"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btnDos"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="2"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btnTres"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="3"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btnCero"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"
            android:text="0"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnIgual"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/text"
            android:background="@color/colorAccent"
            android:text="="
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>